<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 添加导航 -->

    <include layout="@layout/activity_navbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_pressure_guardianship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@mipmap/sg_pressure"
                android:background="@drawable/btn_sg_main_shape"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="血压监护" 
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_sugar_guardianship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sg_main_shape"
                android:src="@mipmap/sg_sugar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="血糖监护"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_action_guardianship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@mipmap/sg_action"
                android:background="@drawable/btn_sg_main_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="行动监护"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_location_guardianship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sg_location"
                android:background="@drawable/btn_sg_main_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="位置监护" 
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>